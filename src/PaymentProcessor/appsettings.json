{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  },
  "ConnectionStrings": {
    "EventBus": "amqp://localhost"
  },
  "EventBus": {
    "SubscriptionClientName": "PaymentProcessor"
  },
  "PaymentOptions": {
    "PaymentSucceeded": true
  },
  "Telemetry": {
    "ServiceName": "payment-processor",
    "PerfMode": false
  },
  "OpenTelemetry": {
    "TraceSampleRatio": 0.05,
    "Otlp": {
      "Endpoint": "http://tempo:4317",
      "Protocol": "grpc"
    }
  },
  "Pyroscope": {
    "Server": "http://pyroscope:4040",
    "ApplicationName": "eshop.payment-processor",
    "SampleRate": 100,
    "UploadIntervalSeconds": 15
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://tempo:4317",
  "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc"
}
